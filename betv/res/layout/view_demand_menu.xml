<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="1280dp"
	android:layout_height="215dp"
    android:background="@drawable/view_demand_menu_bg">
    
    <ImageView
        android:id="@+id/id_drama_left"
        android:layout_width="12dp"
        android:layout_height="22dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="87dp"
        android:scaleType="fitXY"
        android:src="@drawable/direction_left"
        android:visibility="visible"
        android:contentDescription="@string/app_name"/> 
    
    <ImageView 
        android:id="@+id/id_drama_right"
        android:layout_width="12dp"
        android:layout_height="22dp"
        android:layout_marginLeft="1196dp"
        android:layout_marginTop="87dp"
        android:scaleType="fitXY"
        android:src="@drawable/direction_right"
        android:visibility="visible"
        android:contentDescription="@string/app_name"/> 
    
    <ImageView  
        android:id="@+id/id_drama_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/focus"
        android:visibility="invisible"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"/>
    
    <com.szgvtv.ead.app.taijietemplates.ui.view.SelectDrama
        android:id="@+id/id_drama_item0"
        android:layout_width="194dp"
        android:layout_height="119dp"
        android:nextFocusRight="@+id/id_drama_item1"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="39dp"
        android:focusable="true">
    </com.szgvtv.ead.app.taijietemplates.ui.view.SelectDrama>
    
    <com.szgvtv.ead.app.taijietemplates.ui.view.SelectDrama
        android:id="@+id/id_drama_item1"
        android:layout_width="194dp"
        android:layout_height="119dp"
        android:layout_toRightOf="@+id/id_drama_item0"
        android:layout_alignTop="@+id/id_drama_item0"
        android:nextFocusLeft="@+id/id_drama_item0"
        android:nextFocusRight="@+id/id_drama_item2"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="0dp"
        android:focusable="true">
    </com.szgvtv.ead.app.taijietemplates.ui.view.SelectDrama>
    
    <com.szgvtv.ead.app.taijietemplates.ui.view.SelectDrama
        android:id="@+id/id_drama_item2"
        android:layout_width="194dp"
        android:layout_height="119dp"
        android:layout_toRightOf="@+id/id_drama_item1"
        android:layout_alignTop="@+id/id_drama_item1"
        android:nextFocusLeft="@+id/id_drama_item1"
        android:nextFocusRight="@+id/id_drama_item3"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="0dp"
        android:focusable="true">
    </com.szgvtv.ead.app.taijietemplates.ui.view.SelectDrama>
    
    <com.szgvtv.ead.app.taijietemplates.ui.view.SelectDrama
        android:id="@+id/id_drama_item3"
        android:layout_width="194dp"
        android:layout_height="119dp"
        android:layout_toRightOf="@+id/id_drama_item2"
        android:layout_alignTop="@+id/id_drama_item2"
        android:nextFocusLeft="@+id/id_drama_item2"
        android:nextFocusRight="@+id/id_drama_item4"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="0dp"
        android:focusable="true">
    </com.szgvtv.ead.app.taijietemplates.ui.view.SelectDrama>
    
    <com.szgvtv.ead.app.taijietemplates.ui.view.SelectDrama
        android:id="@+id/id_drama_item4"
        android:layout_width="194dp"
        android:layout_height="119dp"
        android:layout_toRightOf="@+id/id_drama_item3"
        android:layout_alignTop="@+id/id_drama_item3"
        android:nextFocusLeft="@+id/id_drama_item3"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="0dp"
        android:focusable="true">
    </com.szgvtv.ead.app.taijietemplates.ui.view.SelectDrama>
    
</RelativeLayout>