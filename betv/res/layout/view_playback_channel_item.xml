<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="244dp" 
    android:layout_height="152dp">
    
    <ImageView 
        android:id="@+id/id_playback_item_bg"
        android:layout_width="244dp"
        android:layout_height="152dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="dp"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:contentDescription="@string/app_name"/>
    
    <ImageView 
        android:id="@+id/id_playback_item_icon"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:src="@drawable/playback_icon_d"
        android:contentDescription="@string/app_name"/>
    
    <ImageView 
        android:id="@+id/id_playback_item_icon_bg"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:contentDescription="@string/app_name"/>
     
   <TextView 
        android:id="@+id/id_playback_item_name_r"
 		android:layout_width="244dp"
 		android:layout_height="wrap_content"
 		android:layout_below="@+id/id_playback_item_icon"
 		android:layout_marginTop="10dp"
 		android:paddingLeft="2dp"
 		android:paddingRight="2dp"
 		android:gravity="center"
 		android:textSize="@dimen/font_25"
 		android:textColor="@color/white"
 		android:singleLine="true"
 		android:ellipsize="marquee"
 		android:marqueeRepeatLimit="marquee_forever"
 		android:visibility="visible"
 		android:text=""/>
 
</RelativeLayout>

