        	android:id="@+id/id_classify_video_left"
        	android:layout_width="12dp"
        	android:layout_height="22dp"
        	android:layout_marginLeft="0dp"
        	android:layout_marginTop="12dp"
        	android:scaleType="fitXY"
        	android:src="@drawable/direction_left"
        	android:visibility="invisible"
        	android:contentDescription="@string/app_name"/> 
    
    	<com.szgvtv.ead.app.taijietemplates.ui.view.HorizontalListView 
        	android:id="@+id/id_classify_video_hlistview"
			android:layout_width="994dp"
			android:layout_height="45dp"
			android:layout_toRightOf="@+id/id_classify_video_left"
			android:layout_marginLeft="20dp"
       		android:layout_marginTop="0dp">
    	</com.szgvtv.ead.app.taijietemplates.ui.view.HorizontalListView>
    
    	<ImageView 
        	android:id="@+id/id_classify_video_right"
        	android:layout_width="12dp"
        	android:layout_height="22dp"
        	android:layout_toRightOf="@+id/id_classify_video_hlistview"
        	android:layout_marginLeft="20dp"
        	android:layout_marginTop="12dp"
        	android:scaleType="fitXY"
        	android:src="@drawable/direction_right"
        	android:visibility="invisible"
        	android:contentDescription="@string/app_name"/> 
       	
    </RelativeLayout>
    
