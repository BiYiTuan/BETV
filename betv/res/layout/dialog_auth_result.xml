<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="573dp" 
    android:layout_height="340dp"
    android:background="@drawable/dialog_prompt_bg">
    
    <RelativeLayout
        android:id="@+id/id_dialog_prompt"
        android:layout_width="473dp"
        android:layout_height="176dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:visibility="visible">
        	
        <ImageView 
        	android:id="@+id/id_dialog_auth_icon"
        	android:layout_width="76dp"
        	android:layout_height="76dp"
        	android:layout_marginTop="50dp"
        	android:scaleType="fitXY"
        	android:visibility="gone"
        	android:src="@drawable/tips_abnormal"
        	android:contentDescription="@string/app_name"/>
        
        <TextView 
       		android:id="@+id/id_dialog_auth_message"
 			android:layout_width="wrap_content"
 			android:layout_height="176dp"
 			android:layout_toRightOf="@+id/id_dialog_auth_icon"
 			android:layout_marginLeft="0dp"
 			android:gravity="center_vertical"
 			android:textSize="@dimen/font_27"
 			android:textColor="@color/white"
 			android:singleLine="true"
 			android:ellipsize="end"
 			android:visibility="visible"
 			android:text=""/>
        
    </RelativeLayout>
    
    <Button
        android:id="@+id/id_dialog_auth_sure"
        android:layout_width="178dp"
        android:layout_height="70dp"
        android:layout_marginLeft="197dp"
        android:layout_marginTop="206dp"
        android:gravity="center"
        android:textSize="@dimen/font_24" 
        android:textColor="@color/white"
        android:text="@string/dialog_sure"
        android:background="@drawable/selector_button_background"/>

</RelativeLayout>
