<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="140dp"
    android:background="@drawable/home_special_bg" >
    
    <TextView
        android:id="@+id/id_special_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/font_26" 
        android:text="@string/home_variety"/>
        <!-- android:text="@string/home_special" -->
            	
    <ImageView
        android:id="@+id/id_special_icon"
        android:layout_width="144dp"
        android:layout_height="120dp"
        android:layout_marginLeft="146dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/home_arts_icon"
        android:contentDescription="@string/app_name" />
        <!-- android:src="@drawable/home_special_icon" -->
           
</RelativeLayout>      	
