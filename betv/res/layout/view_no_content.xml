<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280dp" 
    android:layout_height="720dp"
    android:gravity="center_vertical">
    
    <RelativeLayout 
        android:id="@+id/id_loading_page_fail"
        android:layout_width="1280dp"
        android:layout_height="720dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" 
        android:visibility="visible"
        android:gravity="center_vertical">
        
        <ImageView 
        	android:id="@+id/id_nocontent_icon"
        	android:layout_width="90dp"
        	android:layout_height="90dp"
        	android:layout_marginTop="0dp"
        	android:layout_marginLeft="595dp"
        	android:scaleType="fitXY"
        	android:src="@drawable/tips_no_content"
        	android:visibility="visible"
        	android:contentDescription="@string/app_name"/>
        
    	<TextView 
       		android:id="@+id/id_nocontent_message"
 			android:layout_width="1280dp"
 			android:layout_height="wrap_content"
 			android:layout_below="@+id/id_nocontent_icon"
 			android:layout_marginLeft="0dp"
 			android:layout_marginTop="20dp"
 			android:gravity="center_horizontal"
 			android:textSize="@dimen/font_24"
 			android:textColor="@color/white"
 			android:singleLine="true"
 			android:ellipsize="end"
 			android:visibility="visible"
 			android:text=""/>
        
    </RelativeLayout> 

</RelativeLayout>
